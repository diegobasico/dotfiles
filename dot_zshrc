# If not interactive, return
[[ -o interactive ]] || return
[[ -f "$HOME/.env"]] && source "$HOME/.env"

# Aliases
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias tree='tree --gitignore'
alias xclip='xclip -sel clipboard'
alias wcopy='wl-copy'
alias wpaste='wl-paste'
alias venv='source .venv/bin/activate'
alias open='xdg-open'
alias rsync='rsync -avh --info=progress2 --partial'

# Node version manager
export NVM_DIR="$HOME/.nvm"
[[ -s "$NVM_DIR/nvm.sh" ]] && source "$NVM_DIR/nvm.sh"
[[ -s "$NVM_DIR/bash_completion" ]] && source "$NVM_DIR/bash_completion"

# Tools (Starship, zoxide, uv)
eval "$(zoxide init zsh)"
eval "$(starship init zsh)"

# Initialize zsh
autoload -Uz compinit
compinit
fpath+=(/usr/share/zsh/site-functions)

if [[ -f /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]]; then
  source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
elif [[ -f /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]]; then
  source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
else
  echo "zsh-syntax-highlighting is missing"
fi

# Set viins mode
bindkey -v
bindkey "^?" backward-delete-char
bindkey '^[[3~' vi-delete-char
export KEYTIMEOUT=5

# Set zsh history
HISTFILE=~/.zsh_history
HISTSIZE=1000000
SAVEHIST=1000000
setopt APPEND_HISTORY
setopt INC_APPEND_HISTORY
setopt SHARE_HISTORY
setopt HIST_IGNORE_DUPS
setopt HIST_REDUCE_BLANKS
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_NO_FUNCTIONS
zstyle ':completion:*' list-colors '${(s.:.)LS_COLORS}'

# Command history shortcut
fzf_history() {
  local cmd
  cmd=$(fc -lnr 0 | fzf)
  [[ -n $cmd ]] && print -z -- "$cmd"
}
alias hi='fzf_history'
